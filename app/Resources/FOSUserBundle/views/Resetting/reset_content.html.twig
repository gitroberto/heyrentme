{% trans_default_domain 'FOSUserBundle' %}
<script src="/js/resetPassword.js"></script>
<form id="resetPassword" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
    
    {{ form_errors(form) }}
    {{ form_errors(form.plainPassword.first) }}
    {{ form_errors(form.plainPassword.second) }}
    {{ form_errors(form._token) }}
    
    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'NEUES PASSWORT EINGEBEN'}}) }}
    
    {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'NEUES PASSWORT WIEDERHOLEN'}}) }}
    
    {{ form_widget(form._token) }}
    
    
   
    <div>
        <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
</form>

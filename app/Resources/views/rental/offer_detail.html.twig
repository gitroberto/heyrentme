<script src="http://malsup.github.com/jquery.form.js"></script> 
<script>
    $(function() {
        $("#anleitung-form").ajaxForm({
            target: $("#anleitung-form"),
            success: makeAjaxForm
        });
    });
    function makeAjaxForm(data, status, xhr) {
        // check response
        $("#anleitung-form").ajaxForm({
            target: $("#anleitung-form"),
            success: makeAjaxForm
        });
        $(".selectpicker").selectpicker({
            style: 'btn-info',
            size: 4
        });
        if ($("#form_success").val() === "1") { // form was submitted successfully
            $("#danke").modal();
        }
    }

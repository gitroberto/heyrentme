<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><img src="/img/close-modal.png" alt="close"/></button>
        <h4 class="modal-title">Anfrage</h4>
        <p><span class="text-bold" >Abholung:</span>  <span id="from-date">{{ inquiry.from|localizeddate('none', 'none', 'de_AT', null, 'dd.MM.yyyy') }}</span>, <span id="from-time">&nbsp; &nbsp; &nbsp; &nbsp; {{ inquiry.from|date('H:i') }}</span> </p>
        <p><span class="text-bold">Rückgabe:</span> <span id="to-date">{{ inquiry.to|localizeddate('none', 'none', 'de_AT', null, 'dd.MM.yyyy') }}</span>, <span id="to-time">&nbsp; &nbsp; &nbsp; &nbsp; {{ inquiry.to|date('H:i') }}</span></p>
        <p><span class="text-bold">Gesamtkosten Miete: </span><span class="price-calc">{{ inquiry.price|number_format(2, ',') }}</span> €</p>
        <p><span class="text-bold">Kaution:</span> {{ equipment.deposit|number_format(2, ',') }} €</p>
        {% if equipment.priceBuy %}
            <p><span class="text-bold">Preis bei Kauf:</span> {{ equipment.priceBuy|number_format(2, ',') }} €</p>
        {% endif %}
        <p>
            <span class="text-bold">Ort:</span>
            {{ inquiry.whereabouts }}
            (Genaue adresse wird nach buchnung bekanntgegeben)
        </p>
        {{ form_start(form) }}
            <div>
                {% if not loggedIn %}
                    {{ form_widget(form.name, { 'attr': { 'placeholder': 'DEIN NAME*' }}) }}
                    <div class="err-msg">{{ form_errors(form.name) }}</div>
                    {{ form_widget(form.email, { 'attr': { 'placeholder': 'DEIN EMAIL*' }}) }}
                    <div class="err-msg">{{ form_errors(form.email) }}</div>
                {% endif %}
                {{ form_widget(form.message, { 'attr': { 'rows': '5', 'placeholder': 'NACHRICHT: WOFÜR BENÖTIGST DU DAS EQUIPMENT?*' }}) }}
                <div class="err-msg">{{ form_errors(form.message) }}</div>
                <input type="submit" value="abschicken">
        {{ form_end(form) }}           
    </div>
</div>

{% block script %}
<script>
    $(function() {
        $('button[data-id]').click(function() {
            var id = $(this).data('id');
            if (typeof id !== "undefined" && id !== null && id !== "") {
                var url = '{{ path("booking-cancel", { 'id': 'XIDX' }) }}'.replace('XIDX', id);
                window.location = url;
            }
        });
    });
</script>

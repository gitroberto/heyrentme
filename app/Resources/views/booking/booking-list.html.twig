{% extends 'base.html.twig' %}

{% block home_header %}{% endblock %}

{% block body %}
  <div class="request-container head-req">
  <div class="request-container head-req">
    <img src="/img/detail-bg.jpg" alt="image" class="img-responsive max-320"/></div>
    <img src="/img/detail-bg-rwd.jpg" alt="image" class="img-responsive min-320"/></div>
  </div>
  <div class="container request-container">
    <div class="row">
        <div class="col-xs-12">
            <h1>Deine offenen Buchungen als Benutzer</h1>
        </div>
    </div>
      
    {% for booking in bookings %}
    <div class="row">
        <div class="col-xs-12">
            <div class="row summary">
                <div class="ad col-md-4 col-sm-12">
                    <img src="{% if booking.inquiry.equipment.images|length > 0 %}{{ booking.inquiry.equipment.images[0].urlPath(image_url_prefix) }}{% else %}/img/equipment-default.jpg{% endif %}" 
                         alt="{{ booking.inquiry.equipment.name }}"
                         class="img-responsive"/>
                    <div class="product-info product-ad">
                        <div class="row">
                            <div class="col-xs-6">
                                {{ include('common/stars.html.twig', { rating: booking.inquiry.equipment.rating }) }}
                                <p class="product-name">{{ booking.inquiry.equipment.name }}</p>
                            </div>
                            <div class="col-xs-6"><p class="price">{{ booking.inquiry.equipment.price|number_format(0) }} €</p>
                                <p class="tag">pro tag</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6 summary-info">
                    <p>BEGINN:</p>
                    <p>ENDE:</p>
                    <p>Gesamtkosten:</p>
                    <p>ORT:</p><br />
                </div>
                <div class="col-sm-4 col-xs-6 summary-info">
                    <p>{{ booking.inquiry.fromAt|date('d.m.Y H:i') }}</p>
                    <p>{{ booking.inquiry.toAt|date('d.m.Y H:i') }}</p>
                    <p>{{ booking.inquiry.price|number_format(0) }},- €</p>
                    <p class="dont-transform">
                        {{ booking.inquiry.equipment.addressAsString }}
                    </p>
                </div>
                <div class="col-sm-4 col-sm-push-4 margin-ort">
                    {% if booking.status == constant('STATUS_BOOKED', booking) %}
                        <button data-id="{{ booking.id }}" class="rabat-button">Buchung bearbeiten</button>
                    {% else %}
                        Status: {{ booking.statusAsString }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% else %}
        <div class="row">
            <div class="col-xs-12">
                Keine Buchungen
            </div>
        </div>
    {% endfor %}


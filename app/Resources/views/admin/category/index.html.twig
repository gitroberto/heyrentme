{% extends 'admin/admin.base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('admin_category_list') }}" class="active-crumb">Category</a></li>
{% endblock %}

{% block body %}
<h1>Category</h1>

<a class="button-black backgound-yellow text-black" href="{{ path('admin_category_new') }}">New category</a>

<br/>
<br/>
<div id="jqgrid-wrapper">
        <table id="jqgrid" class="table table-striped table-hover">
                <tr>
                        <td></td>
                </tr>
        </table>
        <div id="jqgrid-pager"></div>
</div>


{% endblock %}

{% block footer %}
    {{ include('admin/common/admin.footer.html.twig') }}
<script>    
$(document).ready(function(){    
//*******************************************
/*	JQGRID INIT
/********************************************/


function rowActions(cellvalue, options, cellobject) {
      return   "<a title='Subcategories'    href='subcategory/"     +  options.rowId + "'><u>Subcategories</u></a>  "+  
               "<a title='Edit'             href='category/edit/"   +  options.rowId + "'><u>Edit</u></a>  "+
  	       "<a title='Delete'           href='category/delete/" +  options.rowId + "' onclick=\"return confirm('Are you sure to delete?')\"><u>Delete</u></a>";
  }
function activeFormatter(val, opts, obj) {
    return val ? 'X' : '';
}

var grid = $('#jqgrid');

if( $('#jqgrid').length > 0 ) {
        grid.jqGrid({
                url: '{{ path('admin_category_jsondata') }}',
                mtype: 'GET',
                datatype: 'jsonp',
                colModel:[
                        { name:' ', width:180, fixed:true, editable:false, sortable:false, formatter:rowActions },
                        { name:'Id', index:'c.id', width: 0, editable:false, sortable:false, hidden: true },
                        { name:'Name', index:'c.name', width: 200, editable:false, sortable:true },
                        { name:'Slug', index:'c.slug', width: 150, editable:false, sortable:true },
                        { name:'Type', index:'c.type', align:"left", width: 100, editable:false, sortable:true},
                        { name:'Position', index:'c.position', align:"right", width: 80, editable:false, sortable:true},
                        { name: 'Active', index: 'c.active', align: "center", width: 80, editable: false, sortable: true, formatter: activeFormatter }
                ],
                height: 550,
                rowNum: 20,
                rowList: [20, 50, 100],
                pager: 'jqgrid-pager',
                sortname: 'c.position',
                viewrecords: true,
                sortorder: "asc",
                multiselect: false
        });
}

}); // end ready function
</script>    
    
{% endblock %}


{% extends 'admin/admin.base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('admin_feedback_list') }}" class="active-crumb">Feedback</a></li>
{% endblock %}

{% block body %}
<h1>Feedback</h1>
<div id="jqgrid-wrapper">
        <table id="jqgrid" class="table table-striped table-hover">
                <tr>
                        <td></td>
                </tr>
        </table>
        <div id="jqgrid-pager"></div>
</div>

{% endblock %}



{% block footer %}
    {{ include('admin/common/admin.footer.html.twig') }}
<script>    
$(document).ready(function(){    
//*******************************************
/*	JQGRID INIT
/********************************************/

var grid = $('#jqgrid');

if( $('#jqgrid').length > 0 ) {
        grid.jqGrid({
                url: '{{ path('admin_feedback_jsondata') }}',
                mtype: 'GET',
                datatype: 'jsonp',
                colModel:[
                        { name:' ', width:0, fixed:true, editable:false, sortable:false, hidden: true },
                        { name:'Id', index:'f.id', width:0, editable:false, sortable:false, hidden: true },
                        { name:'Name', index:'f.name', width: 200, editable:false, sortable:true },
                        { name:'Email', index:'f.email', width: 200, editable:false, sortable:true },
                        { name:'Subject', index:'f.subject', width: 200, editable:false, sortable:true },
                        { name:'Message', index:'f.message', width: 300, editable:false, sortable:true },
                        { name:'Created', index:'f.createdAt', align:"right", width: 150, editable:false, sortable:true}
                ],
                height: 550,
                rowNum: 20,
                rowList: [20, 50, 100],
                pager: 'jqgrid-pager',
                sortname: 'f.createdAt',
                viewrecords: false,
                sortorder: "desc",
                multiselect: false
        });
}

}); // end ready function
</script>    
    
{% endblock %}


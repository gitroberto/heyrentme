{% extends 'admin/admin.base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('admin_testimonials_list') }}" class="active-crumb">Testimonials</a></li>
{% endblock %}

{% block body %}
<h1>Testimonials</h1>

<a class="button-black backgound-yellow text-black" href="{{ path('admin_testimonials_new') }}">New testimonial</a>

<div id="jqgrid-wrapper">
        <table id="jqgrid" class="table table-striped table-hover">
                <tr>
                        <td></td>
                </tr>
        </table>
        <div id="jqgrid-pager"></div>
</div>


{% endblock %}

{% block footer %}
    {{ include('admin/common/admin.footer.html.twig') }}
<script>    
$(document).ready(function(){    
//*******************************************
/*	JQGRID INIT
/********************************************/


function rowActions(cellvalue, options, cellobject) {
      return   "<a title='Edit'             href='testimonials/edit/"   +  options.rowId + "'><u>Edit</u></a>  "+
  	       "<a title='Delete'           href='testimonials/delete/" +  options.rowId + "' onclick=\"return confirm('Are you sure to delete?')\"><u>Delete</u></a>";
  }

var grid = $('#jqgrid');

if( $('#jqgrid').length > 0 ) {
        grid.jqGrid({
                url: '{{ path('admin_testimonials_jsondata') }}',
                mtype: 'GET',
                datatype: 'jsonp',
                colModel:[
                        { name:' ', width:120, fixed:true, editable:false, sortable:false, formatter:rowActions },
                        { name:'Id', index:'t.id', width:0, editable:false, sortable:false, hidden: true },
                        { name:'Name', index:'t.name', width: 150, editable:false, sortable:true },
                        { name:'Age', index:'t.age', width: 80, align: "right", editable:false, sortable:true },
                        { name:'Place', index:'t.place', width: 150, editable:false, sortable:true },
                        { name:'Type', index:'t.type', width: 100, editable:false, sortable:true },
                        { name:'Position', index:'t.position', align:"right", width: 80, editable:false, sortable:true}
                ],
                height: 500,
                rowNum: 20,
                rowList: [20, 50, 100],
                pager: 'jqgrid-pager',
                sortname: 't.position',
                viewrecords: false,
                sortorder: "asc",
                multiselect: false
        });
}

}); // end ready function
</script>    
    
{% endblock %}


{{ form_start(form) }}
    <input type="hidden" name="success" value="{{ form.vars.submitted and form.vars.valid ? "1" : "0" }}"/>
    <div class="row">
        <div class="col-sm-12">
            Gruppenstunden
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
           Einheit w√§hlen:
           {{ form_widget(form.type) }}
        </div>
        <div class="col-sm-6">
            Preis pro Std. ab: 
            {{ form_widget(form.price) }}
